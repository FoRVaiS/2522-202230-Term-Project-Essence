<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.bcit.comp2522.termproject.essence.HUD.EssenceBar">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <GridPane prefWidth="200.0" HBox.hgrow="ALWAYS">
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                       <ProgressBar fx:id="essenceBar" prefHeight="18.0" prefWidth="105.0" progress="0.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  </children>
               </GridPane>
            </children>
         </HBox>
        <Label fx:id="essenceLabel" text="Essence" />
    </children>
</AnchorPane>
